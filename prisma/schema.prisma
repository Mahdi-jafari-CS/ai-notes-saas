// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  clerkUserId String   @unique
  email       String   @unique
  name        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  

  notes       Note[]

  @@map("users")
}

model Note {
  id          String   @id @default(cuid())
  userId      String
  title       String?
  inputText   String   // The original text or PDF content
  inputType   String   // "text" or "pdf"
  fileName    String?  // Original filename if uploaded
  outputType  String?  // "summary", "bullets", "flashcards", "quiz" - optional until AI generates
  outputText  String?  // The AI-generated content - optional until AI generates
  status      String   @default("pending") // "pending", "generating", "completed", "failed"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relationship to User
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Indexes for better performance
  @@index([userId])
  @@index([createdAt])
  @@map("notes")
}